{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es2018"],
        "module": "commonjs",
        "target": "es2018",
        "outDir": "build",
        "rootDir": "./src",
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@type/*": [
                "@types/*"
            ]
        },
        "typeRoots" : [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "@types/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
    }
}